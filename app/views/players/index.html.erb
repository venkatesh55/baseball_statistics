<% if @players %>
	<div class="table-responsive">
		<table class="table table-striped">
			<caption style="caption-side: top; font-size: larger;">List of Players</caption>
			<thead>
				<tr>
					<th><%= sortable "given_name", 'Name' %></th>
					<th><%= sortable "rbi" %></th>
				    <th><%= sortable "runs" %></th>
					<th><%= sortable "home_runs", 'Home Runs' %></th>
					<th><%= sortable "avg" %></th>
			    	<th><%= sortable "ops" %></th>
				</tr>
			</thead>
			<% @players.each do |player| %>
				<tr>
					<td><%= player.given_name %></td>
					<td><%= player.rbi %></td>
					<td><%= player.runs %></td>
					<td><%= player.home_runs %></td>
					<td><%= player.avg %></td>
					<td><%= player.ops %></td>
				</tr>
			<% end %>
			<div class="d-flex" style="justify-content: space-between;">
				<div class="mt-3 p-0">
					<%= will_paginate @players %>
				</div>
				<div class="form-inline">
					<%= render :partial => 'filter_form' %>
				</div>
			</div>
		</table>
	</div>
<% else %>
	"No Results Found"
<% end %>
